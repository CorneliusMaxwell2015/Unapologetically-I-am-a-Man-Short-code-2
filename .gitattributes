assets/videos/*.mp4 filter=lfs diff=lfs merge=lfs -text

# Track video files with Git LFS
*.mp4 filter=lfs diff=lfs merge=lfs -text

# Optional: track other large media types
*.mov filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text

name: Upload Video to YouTube

on:
  push:
    branches:
      - main

jobs:
  upload:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        with:
          lfs: true

      - name: Install Git LFS
        run: |
          git lfs install
          git lfs pull

      - name: Upload video to YouTube
        uses: ai-actions/youtube-upload@v1
        with:
          file: assets/videos/Unapologetically_Trailer.mp4
          title: "Unapologetically I Am a Man â€” Official Trailer"
          description: |
            A cinematic movement. A declaration of identity.
            A message for generations.
          categoryId: 22
          privacyStatus: public
        env:
          CLIENT_ID: ${{ secrets.YOUTUBE_CLIENT_ID }}
          CLIENT_SECRET: ${{ secrets.YOUTUBE_CLIENT_SECRET }}
          REFRESH_TOKEN: ${{ secrets.YOUTUBE_REFRESH_TOKEN }}
